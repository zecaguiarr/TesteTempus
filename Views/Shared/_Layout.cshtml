<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Teste Tempus</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:blueviolet">
        <div class="container">

            <div class="navbar-header">
                <span class="icon-bar"></span>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <ul class="nav navbar-nav"><li> <img src="~/fonts/tempus.jpeg" style="width:50px;height:50px; margin-left:-80px" />  </li></ul>
                @Html.ActionLink("Teste Tempus", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color:black" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
               
                    <li>@Html.ActionLink("Cadastrar cliente", "Create", "DadosClientes", null, htmlAttributes: new { style = "color:black" })</li>
                    <li>@Html.ActionLink("Lista de clientes", "Index", "DadosClientes", null, htmlAttributes: new { style = "color:black" })</li>
                    
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

        <footer class="border-top justify-content-center footer text-muted">
            <div class="container">
                <p>&copy; @DateTime.Now.Year - Colemar Araújo Aguiar</p>
                <div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
