@model CadastroTempus.Models.dadosCliente

@{
    ViewBag.Title = "Delete";
}
<body style="background-color:lightcyan">
    <h2>Excluir</h2>

    <h3>Tem certeza que deseja excluir os dados de @Model.Nome?</h3>
    <div>
        <h4>Verifique os dados abaixo:</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                Data de Nascimento:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DtaNascimento)
            </dd>

            <dt>
                Data do Cadastro:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DtaCadastro)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Renda):
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Renda)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Excluir" class="btn btn-default" style="background-color:red"/> |
                @Html.ActionLink("Voltar", "Index")
            </div>
        }
    </div>
    </body>